@import 'nib'
@import 'nib/gradients'

gris = #999
grisOscuro = #666
naranjo = #FFAA00
verdeClaro = #95C11F
verdeOscuro = #3AAA35
foo = margin-left 1em
plomo = #7c7c7c


body
	background #EEE
	font-family 'Open Sans', sans-serif
	font-size 18px
	a
		color grisOscuro
	h1
	h2
	h3
	h4
		color grisOscuro
		font-weight 300
		text-align center
	p
		color grisOscuro
		font-weight 300
		text-align center
		font-size .8em
	header
		background white
		overflow hidden
		position relative
		width 100%
		.contHeader
			display block
			margin 0 auto
			width 80%
			.avatar
				float right
				a
					figure
						background white
						float left
						padding .5em 0
						img
							border-radius 50%
							margin 0
							width 50px
					.nombre
						float left
						margin-left 1em
						position relative
						top 1em
						span
							color grisOscuro
			.logo
				float left
				figure
					padding .5em 0
					img
						margin 0
						filter grayscale(1)
						transition .5s
						-webkit-filter grayscale(1)
						width 150px
						&:hover
							filter grayscale(0)
							-webkit-filter grayscale(0)
	nav
		display block
		font-size .7em
		font-weight 700
		margin 0 auto
		position relative
		width 80%
		ul
			border-bottom 3px solid transparent
			margin 0 auto
			padding 0
			a
				color inherit
				margin 0 1em
				text-decoration none
				padding 1em 0
				&:hover
					li
						border-bottom 3px solid verdeClaro
				li
					border-bottom 3px solid transparent
					color plomo
					display inline-block
					font-family 'Varela', sans-serif
					font-weight 300
					padding .5em 0
					text-align center
					text-transform uppercase
	section
		display block
		margin 2em auto
		position relative
		width 80%
		article
			display inline-block
			margin 1em 0
			padding 0
			position relative
			width 48%
			&:nth-child(even)
				margin-left 1em
			a
				-webkit-filter grayscale(1)
				filter grayscale(1)
				&:hover
					-webkit-filter grayscale(0)
					filter grayscale(0)
				figure
					.comunidad
						background linear-gradient(to left, #A2B885 50%, #91A478 50%)
						border-radius 50%
						height 200px
						width 200px
						z-index 10
						img
							width 100%
					.comuNombre
						background #D4E4AE
						border-radius .5em
						right 0
						height 150px
						position absolute
						top 25px
						width 90%
						z-index -10
						h2
							color white
							font-size 1.3em
							font-style italic
							font-weight 700
							margin .7em 16px 0 0
							text-align right
						p
							color grisOscuro
							margin 0 16px 0 0
							text-align right
	.progressbar
		background #A2B885
		border-radius .5em
		display block
		margin 1em auto
		width 40%
		.ui-progressbar-value
			background #91A478
			border-right 1px solid plomo

.progress-label
    position absolute
    left 50%
    top 4px
    font-weight bold
    text-shadow 1px 1px 0 #fff

@media (max-width: 1200px)
	body
		section
			article
				a
					figure
						.comunidad
							height 150px
							width 150px
@media (max-width: 1000px)
	body
		section
			article
				width 100%
				&:nth-child(even)
					margin-left 0